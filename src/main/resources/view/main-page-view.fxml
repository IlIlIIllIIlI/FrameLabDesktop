<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.frameLab.frameSprite.controller.MainPageController"
            prefHeight="400.0" prefWidth="600.0">


    <HBox>
        <VBox spacing="20.0">
            <Label fx:id="helloLabel">Hello</Label>
            <Button fx:id="logOutButton" onAction="#handleLogOut">Log Out</Button>
        </VBox>
        <VBox>
            <Label fx:id="currentChallengeLabel"> No challenges for now</Label>
            <ImageView fx:id="currentChallengeImage" fitHeight="400" fitWidth="400" pickOnBounds="true" preserveRatio="true">
            </ImageView>
            <Button fx:id="projectsButton" onAction="#handleProjects">Try the challenge !</Button>
        </VBox>
    </HBox>
</AnchorPane>
